              "sectionName": "§4.2 反三角函数",
              "knowledgeCards": [
                {
                  "title": "反正弦",
                  "summary": "正弦函数的反函数",
                  "formula": "$\\arcsin x: x\\in[-1,1], y\\in[-\\frac{\\pi}{2},\\frac{\\pi}{2}]$"
